<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:padding="16dp"
    tools:context=".ui.main.MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a product type"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#3B84F1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>


    <Button
        android:id="@+id/construction_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/white"
        android:text="Construction"
        android:textColor="#3B84F1"
        android:textAllCaps="false"
        android:textSize="18sp" />

    <Button
        android:id="@+id/painting_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/construction_btn"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/white"
        android:text="Painting"
        android:textColor="#3B84F1"
        android:textAllCaps="false"
        android:textSize="18sp" />

    <Button
        android:id="@+id/lighting_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/painting_btn"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/white"
        android:text="Lighting"
        android:textColor="#3B84F1"
        android:textAllCaps="false"
        android:textSize="18sp" />

    <Button
        android:id="@+id/plaque_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lighting_btn"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/white"
        android:text="Plaque"
        android:textColor="#3B84F1"
        android:textAllCaps="false"
        android:textSize="18sp" />

    <Button
        android:id="@+id/wood_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/plaque_btn"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/white"
        android:text="Wood"
        android:textColor="#3B84F1"
        android:textAllCaps="false"
        android:textSize="18sp" />

    <Button
        android:id="@+id/water_point_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/wood_btn"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/white"
        android:text="Water Point"
        android:textColor="#3B84F1"
        android:textAllCaps="false"
        android:textSize="18sp" />

</RelativeLayout>
